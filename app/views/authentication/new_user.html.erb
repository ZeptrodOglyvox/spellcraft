<p>Sign Up</p>

<!-- TODO: @user seems to not be the same as in controller -->

<%= form_with model: @user, url: new_user_path, method: :put do |f| %>
<%= render partial: 'user_fields', locals: {f: f} %>
<p>
    <%= recaptcha_tags %>
</p>
<p>
    <%= f.submit 'Sign Up' %>&nbsp;&nbsp;&nbsp;
    <%= f.submit 'Clear Form', type: :reset %>
</p>
<% end %>